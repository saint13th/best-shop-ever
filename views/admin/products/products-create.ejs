<section class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <form id="createProductForm" action="" class="ccontainer flex flex-col mx-auto space-y-10">
        <span id="createProductError" class="text-red-900"></span>
        <span id="createProductSuccess" class="text-green-900"></span>
        <fieldset class="rounded-md shadow-sm dark:bg-gray-900">
            <div class="space-y-2 py-3 col-span-full lg:col-span-1">
                <p class="font-medium">Создание товара:</p>
            </div>
            <div class="grid grid-cols-6 gap-4 col-span-full lg:col-span-3">
                <div class="col-span-full sm:col-span-12">
                    <label for="title" class="text-sm">Заголовок</label>
                    <input id="title" type="text" placeholder="Заголовок товара (на русском)"
                        class="w-full rounded-md focus:ring focus:ri focus:ri dark:border-gray-700 dark:text-gray-900">
                </div>
                <div class="col-span-full sm:col-span-12">
                    <label for="name" class="text-sm">Наименование</label>
                    <input id="name" type="text" placeholder="Наименование товара (на английском)"
                        class="w-full rounded-md focus:ring focus:ri focus:ri dark:border-gray-700 dark:text-gray-900">
                </div>
                <div class="col-span-full sm:col-span-4">
                    <label for="price" class="text-sm">Цена</label>
                    <input id="price" type="number" min="0" placeholder="Цена"
                        class="w-full rounded-md focus:ring focus:ri focus:ri dark:border-gray-700 dark:text-gray-900">
                </div>
                <div class="col-span-full sm:col-span-4">
                    <label for="rating" class="text-sm">Рейтинг</label>
                    <input id="rating" type="number" min="0" max="5" placeholder="Рейтинг"
                        class="w-full rounded-md focus:ring focus:ri focus:ri dark:border-gray-700 dark:text-gray-900">
                </div>
                <div class="col-span-full sm:col-span-4">
                    <label for="image" class="text-sm">Изображение</label>
                    <input id="image" type="text" placeholder="Изображение"
                        class="w-full rounded-md focus:ring focus:ri focus:ri dark:border-gray-700 dark:text-gray-900">
                </div>
                <div class="col-span-full sm:col-span-12">
                    <label for="description" class="text-sm">Описание</label>
                    <textarea id="description" type="text" placeholder="Описание товара)"
                        class="w-full rounded-md focus:ring focus:ri focus:ri dark:border-gray-700 dark:text-gray-900"></textarea>
                </div>
                <div class="col-span-full sm:col-span-12">
                    <label for="shortDescription" class="text-sm">Описание короткое</label>
                    <textarea id="shortDescription" type="text" placeholder="Короткое описание товара)"
                        class="w-full rounded-md focus:ring focus:ri focus:ri dark:border-gray-700 dark:text-gray-900"></textarea>
                </div>
                <p>Характеристики:</p>
                <div class="col-span-full sm:col-span-12">
                    <div class="grid grid-cols-12 gap-4 col-span-full">
                        <div class="col-span-6">
                            <button type="button" id="add-spec-button"
                                class="flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                                Добавить характеристику
                            </button>
                        </div>
                    </div>
                    <div class="hidden" id="spec-skeleton">
                        <div
                            class="grid grid-cols-12 gap-4 col-span-full justify-center items-center product-spec__row mt-2">
                            <div class="col-span-5">
                                <input type="text" placeholder="Название"
                                    class="product-spec__name w-full rounded-md focus:ring focus:ri focus:ri dark:border-gray-700 dark:text-gray-900">
                            </div>
                            <div class="col-span-5">
                                <input type="text" placeholder="Значение"
                                    class="product-spec__value w-full rounded-md focus:ring focus:ri focus:ri dark:border-gray-700 dark:text-gray-900">
                            </div>
                            <div class="col-span-2">
                                <button type="button" data-delete-spec="true"
                                    class="flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                                    Удалить
                                </button>
                            </div>
                        </div>
                    </div>
                    <div id="specs"></div>
                </div>
                <div class="col-span-full sm:col-span-12 flex justify-center    ">
                    <button type="submit"
                        class="flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                        Создать товар
                    </button>
                </div>
            </div>
        </fieldset>
    </form>
</section>